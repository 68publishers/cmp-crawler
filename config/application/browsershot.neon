services:
    browsershot_factory:
        autowired: App\Browsershot\BrowsershotFactoryInterface
        type: App\Browsershot\BrowsershotFactoryInterface
        factory: @browsershot_factory.default

    browsershot_factory.default:
        autowired: no
        factory: App\Browsershot\BrowsershotFactory(
            nodeBinary: ::env(NODE_BINARY, '/usr/bin/node')
            npmBinary: ::env(NPM_BINARY, '/usr/bin/npm')
            chromePath: ::env(CHROME_BINARY, '/usr/bin/chromium-browser')
        )
